
{
  "manifest_version": 3,
  "name": "StagePOV: Pro Cinema Audio Suite",
  "version": "1.0.0",
  "description": "Professional cinema audio workstation with Dolby Atmos support. Captures and masters audio from any active tab.",
  "permissions": [
    "activeTab",
    "tabCapture",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Open StagePOV Rack"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
